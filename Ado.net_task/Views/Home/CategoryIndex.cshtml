@model IEnumerable<Ado.net_task.Models.Category>

@{
    ViewBag.Title = "CategoryIndex";
}

<h2>CategoryIndex</h2>

<p>
    @Html.ActionLink("Create New", "Create_cat")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <th>
            @Html.DisplayFor(modelItem => item.CategoryId)
        </th>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.ActionLink("Edit", "CatEdit", new { id=item.CategoryId }) |
            
            @Html.ActionLink("Delete", "CatDelete", new { id=item.CategoryId })
        </td>
    </tr>
}

</table>
